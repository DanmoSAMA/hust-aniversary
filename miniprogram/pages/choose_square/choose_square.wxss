/* pages/choose/choose.wxss */
.choose-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.choose-container-avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0rpx 0rpx 12rpx rgba(0, 0, 0, .15);
    width: 463rpx;
    height: 308.6rpx;
    margin: 200rpx 0 120rpx 0;
    border-radius: 20rpx;
    overflow: hidden;
    position: relative;
}

.choose-container-avatar-canvas {
    width: 450rpx;
    height: 295.6rpx;
}

.choose-container-avatar-img {
    width: 100%;
    height: 100%;
}

.choose-container-choose_btn,
.choose-container-save_btn,
.choose-container-preview_btn {
    width: 380rpx !important;
    height: 120rpx !important;
    border-radius: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: normal;
    font-size: 36rpx;
    background-color: #fff;
    box-shadow: 0rpx 0rpx 12rpx rgba(0, 0, 0, .15);
    font-family: PingFang SC-Regular;
    letter-spacing: 5rpx;
}

.choose-container-save_btn,
.choose-container-preview_btn {
    margin-top: 60rpx;
    background-color: #D4190C;
    color: #fff;
}