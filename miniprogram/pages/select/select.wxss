/* pages/select/select.wxss */
.select-bg {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 50%;
}

.select-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* background-color: red; */
}

.select-container-btn {
    background-color: transparent;
    margin-top: 12rpx;
    font-weight: normal;
    letter-spacing: 4rpx;
    font-size: 32rpx;
    border-radius: 20rpx;
    color: #fff;
    padding: 0;
}

.select-container-btn.hidden {
    display: none;
}

.select-container-upper {
    width: 360rpx;
    height: 360rpx;
    border-radius: 5%;
    overflow: hidden;
    margin-top: 30rpx;
    background-color: #fff;
    transition: all .3s;
}

.select-container-upper.resize {
    width: 180rpx;
    height: 180rpx;
}

.select-container-upper-img {
    width: 100%;
    height: 100%;
}

.select-container-main {
    margin-top: 80rpx;
    display: flex;
    flex-wrap: wrap;
    height: 860rpx;
    padding-top: 40rpx;
    justify-content: center;
    background-color: #fff;
    border-top-left-radius: 50rpx;
    border-top-right-radius: 50rpx;
}

.select-container-main.resize {
    height: 1090rpx;
}

.select-container-main-img_container {
    width: 180rpx;
    height: 180rpx;
    margin: 30rpx;
    display: flex;
}

.select-container-main-img_container-img {
    width: 90%;
    height: 90%;
}