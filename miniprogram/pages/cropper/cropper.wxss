.top {
  position: absolute;
  width: 100%;
  top: 10rpx;
  display: flex;
  flex-flow: wrap;
  z-index: 10;
  color: white;
  justify-content: space-around;
}

.hint {
  position: absolute;
  top: 10rpx;
  width: 100%;
  font-size: 33rpx;
  text-align: center;
  color: white;
  z-index: 10;
}

page {
  /* background: rgb(14, 13, 13); */
  background: #313131;
}

view {
  font-size: 30rpx;
}

.bottom {
  position: absolute;
  width: 100%;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  bottom: 100rpx;
  padding: 0 30rpx;
}

.bottom-btn {
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-weight: 300;
  letter-spacing: 5rpx;
  font-size: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  background-color: #313131;
}

.bottom-btn-rechoose {
  width: 25%!important;
  margin: 0 0 0 15px!important;
  letter-spacing: 0.5px;
}

.bottom-btn-rotate {
  width: 10%!important;
  margin-left: 0!important;
}

.bottom-btn-submit {
  width: 28%!important;
  background-color: #E13428;
  border-radius: 25rpx;
  margin-right: 50px!important;
}

.input {
  display: flex;
  height: 50rpx;
  width: 50%;
}

.input>.label {
  min-width: 150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input>input {
  margin-left: 10rpx;
  text-align: center;
  max-width: 160rpx;
  border: 1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}

.iconfont {
  font-size: 20px;
  transform:scaleX(1.35);
}