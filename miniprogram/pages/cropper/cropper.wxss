.top {
  position: absolute;
  width: 100%;
  top: 10rpx;
  display: flex;
  flex-flow: wrap;
  z-index: 10;
  color: white;
  justify-content: space-around;
}

.hint {
  position: absolute;
  top: 10rpx;
  width: 100%;
  font-size: 33rpx;
  text-align: center;
  color: white;
  z-index: 10;
}

page {
  background: rgb(14, 13, 13);
}

view {
  font-size: 30rpx;
}

.bottom {
  position: absolute;
  width: 100%;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  top: 1150rpx;
}

.bottom-btn {
  width: 37%!important;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  background-color: #D4190C;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 300;
  letter-spacing: 5rpx;
  margin-bottom: 60rpx;
  margin-right: 200rpx;
  position: relative;
  top: -350rpx;
  font-size: 44rpx;
  border-radius: 25rpx;
}

.input {
  display: flex;
  height: 50rpx;
  width: 50%;
}

.input>.label {
  min-width: 150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input>input {
  margin-left: 10rpx;
  text-align: center;
  max-width: 160rpx;
  border: 1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}