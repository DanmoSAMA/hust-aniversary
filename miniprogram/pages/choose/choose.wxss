/* pages/choose/choose.wxss */
.choose-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.choose-container-avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0rpx 0rpx 12rpx rgba(0, 0, 0, .15);
    width: 380rpx;
    height: 380rpx;
    margin: 100rpx 0;
    border-radius: 20rpx;
}

.choose-container-avatar-img {
    width: 100%;
    height: 100%;
}

.choose-container-choose_btn, 
.choose-container-download_btn,
.choose-container-preview_btn {
    width: 380rpx!important;
    height: 120rpx!important;
    border-radius: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: normal;
    font-size: 36rpx;
    background-color: #fff;
    box-shadow: 0rpx 0rpx 12rpx rgba(0, 0, 0, .15);
    font-family: PingFang SC-Regular;
    letter-spacing: 5rpx;
}

.choose-container-download_btn,
.choose-container-preview_btn {
    margin-top: 60rpx;
    background-color: #D4190C;
    color: #fff;
}